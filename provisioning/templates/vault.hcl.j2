cluster_addr = "{{ clu_addr }}"
api_addr = "{{ api_addr }}"
disable_mlock = true
ui = true

listener "tcp" {
  address            = "0.0.0.0:8200"
  tls_cert_file      = "{{ tls['cert_path'] }}"
  tls_key_file       = "{{ tls['key_path'] }}"
  tls_client_ca_file = "{{ tls['ca_path'] }}" 
}

storage "raft" {
  path    = "{{ vault_data_dir }}"
  node_id = "{{ node_id }}"

 {% for host in groups['vault'] %}
  retry_join {
    leader_tls_servername   = "{{ hostvars[host].inventory_hostname }}"
    leader_api_addr         = "{{ hostvars[host]['api_addr'] }}"
    leader_ca_cert_file     = "{{ tls['ca_path'] }}"
    leader_client_cert_file = "{{ tls['cert_path'] }}"
    leader_client_key_file  = "{{ tls['key_path'] }}"
  }
{% endfor %}

}

